#!/usr/bin/env python

import Robot
import rospy

rospy.init_node('test')
robot = Robot.Robot('robot_0', 0.5, 0.5, 0 , 0, 0)
robot2 = Robot.Robot('robot_1', 0.6, 0.6, 0, 0, 0)

robot.forward()
robot2.forward()

rate = rospy.Rate(10)

counter = 0

while not rospy.is_shutdown():
    robot.execute()
    robot2.execute()
    counter += 1

    if counter % 100 == 0 and not counter % 200 == 0:
        robot.stop()

    if counter % 200 == 0:
        robot.forward()

    rate.sleep()
